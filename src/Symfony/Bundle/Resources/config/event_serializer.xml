<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="AutoMapper\EventListener\Symfony\SerializerMaxDepthListener">
            <argument type="service" id="serializer.mapping.class_metadata_factory" />
            <tag name="kernel.event_listener" event="AutoMapper\Event\PropertyMetadataEvent" priority="-64" />
        </service>

        <service id="AutoMapper\EventListener\Symfony\SerializerGroupListener">
            <argument type="service" id="serializer.mapping.class_metadata_factory" />
            <tag name="kernel.event_listener" event="AutoMapper\Event\PropertyMetadataEvent" priority="-64" />
        </service>

        <service id="AutoMapper\EventListener\Symfony\SerializerIgnoreListener">
            <argument type="service" id="serializer.mapping.class_metadata_factory" />
            <tag name="kernel.event_listener" event="AutoMapper\Event\PropertyMetadataEvent" priority="-64" />
        </service>
    </services>
</container>
